<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/baloo_bhai</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="button_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16sp</item>
        <item name="android:backgroundTint">#1C172E</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">#00695C</item>
        <item name="android:textColorHighlight">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="score">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>